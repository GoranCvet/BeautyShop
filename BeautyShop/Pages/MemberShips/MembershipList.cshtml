@page
@model BeautyShop.Pages.MemberShips.MembershipListModel
@{
	ViewData["Title"] = "MembershipList";
}

<h1>Memeberships</h1>
<div>
	<table class="table">
		<thead>
			<tr>
				<th>Membership Type</th>
				<th>Discount Service</th>
				<th>Discount Product</th>
			</tr>
		</thead>
		@foreach (var membership in Model.Memberships)
		{
			<tr>
				<td>
					@membership.GetMemberShipType()
				</td>
				<td>
					@membership.DiscountService().ToString("P")
				</td>
				<td>
					@membership.DiscountProduct().ToString("P")
				</td>
			</tr>
		}
		<tfoot style="visibility:@(!Model.Memberships.Any() ? "visible" : "hidden")">
			<tr>
				<td colspan="3">
					Nothing to display.
				</td>
			</tr>
		</tfoot>
	</table>
</div>
