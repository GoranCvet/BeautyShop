@page "{Id:int}"
@model BeautyShop.Pages.Customers.CustomerDetailsModel
@{
	ViewData["Title"] = "CustomerDetails";
}

<h1>CustomerDetails</h1>

<table class="table table-bordered">
	<tr>
		<td>Id</td>
		<td>@Model.Customer.Id</td>
	</tr>
	<tr>
		<td>FirstName</td>
		<td>@Model.Customer.FirstName</td>
	</tr>
	<tr>
		<td>LastName</td>
		<td>@Model.Customer.LastName</td>
	</tr>
	<tr>
		<td>Membership</td>
		<td>@Model.Customer.MemberShip.GetMemberShipType()</td>
	</tr>
</table>

<a class="btn btn-primary" asp-page="./CustomerList">See All Authors</a>
@if (!string.IsNullOrEmpty(Model.Message))
{
	<div class="alert alert-info">
		@Model.Message
	</div>
}